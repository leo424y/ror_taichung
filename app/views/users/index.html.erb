<div class="container">
<div class="row">
  <% @users.each do |user| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag user.gravatar_url(:size => 300, :default => 'https://dl.dropboxusercontent.com/u/1252720/_rortc/ROR.jpg') %>
        <div class="caption">
          <h3><%= user.name %></h3>
          <p>
          信箱：<%= user.email %><br>
          </p>
          <p><%= link_to("詳情", user_path(user), class: "btn btn-primary btn-block", role: "button") %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
<br>
